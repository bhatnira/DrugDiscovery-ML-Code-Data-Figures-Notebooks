# Render.com Environment Configuration for ChemML Suite

# Python Version Configuration
PYTHON_VERSION=3.10.12
PYTHONVERSION=3.10.12

# Build Commands for Render.com Web Service
BUILD_COMMAND="python -m pip install --upgrade pip && python -m pip install -r requirements.txt"

# Start Command for Render.com Web Service  
START_COMMAND="python -m streamlit run main_app.py --server.port $PORT --server.address 0.0.0.0 --server.headless true --server.enableCORS false --server.enableXsrfProtection false"

# Environment Variables to Set in Render.com Dashboard
STREAMLIT_SERVER_PORT=$PORT
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_SERVER_ENABLE_CORS=false
STREAMLIT_SERVER_ENABLE_XSRF_PROTECTION=false

# Instance Configuration
INSTANCE_TYPE=free
REGION=oregon
